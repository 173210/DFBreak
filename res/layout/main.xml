<GridLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="2"
    tools:context=".MainActivity" >

    <CheckBox
        android:id="@+id/test_checkBox"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="0"
        android:text="@string/test_checkBox_text" />

    <Button
        android:id="@+id/exec_button"
        android:layout_column="1"
        android:layout_row="0"
        android:gravity="right"
        android:text="@string/exec_button_text" />

    <Button
        android:id="@+id/reboot_button"
        android:layout_column="2"
        android:layout_row="0"
        android:gravity="right"
        android:text="@string/reboot_button_text" />

    <TextView
        android:id="@+id/out_textView"
        android:layout_width="match_parent"
        android:layout_height="320px"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="1"
        android:scrollbars="vertical"
        android:text="@string/out_textView_text" />

</GridLayout>